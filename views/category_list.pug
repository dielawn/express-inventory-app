extends layout

block content
  h1= title
  if category_list.length
    ul
      each category in category_list
        li
          a(href=category.url) #{category.tire_class}
          |  (#{category.season}) 

  else
    p There are no categorys.

  if errors && errors.length > 0
      ul
        each error in errors
          li!= error.msg