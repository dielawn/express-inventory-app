extends layout

block content

  h1 #{title}: #{tire.model_name} 
  
  div(style='margin-left:20px;margin-top:20px')

  if tire_instances.length

    p #[strong Delete the following copies before attempting to delete this Book.] 

  else

    p Do you really want to delete #[strong #{tire.model_name}]?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden',name='id', value=tire._id )
        button.btn.btn-primary(type='submit') Delete  

  if errors && errors.length > 0
    ul
      each error in errors
        li!= error.msg