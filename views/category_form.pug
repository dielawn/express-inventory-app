extends layout

block content
  h1= title 

  form(method='POST')
    div.form-group
      label(for='tire_class') Tire Class:
      input#tire_class.form-control(type='text', placeholder='Tire class', name='tire_class', value=(category ? category.tire_class : ''))

    div.form-group
      label(for='season') Season:
      input#season.form-control(type='text', placeholder='Season', name='season', value=(category ? category.season : ''))

    div.form-group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Description', name='description')
        | #{category ? category.description : ''}

    button.btn.btn-primary(type='submit') Submit

    if errors && errors.length > 0
      ul
        each error in errors
          li!= error.msg
